    }

    .slide:not(.active) {
      opacity: 0;
    }

    .indicator.active {
      opacity: 1;
    }

    .indicator:not(.active) {
      opacity: 0.5;
    }

    .scrollbar-hide {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
    .scrollbar-hide::-webkit-scrollbar {
      display: none;
    }


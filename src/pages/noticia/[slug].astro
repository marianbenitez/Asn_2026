---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Noticia - Asociación Sanjuanina de Nutrición">
  <div class="max-w-4xl mx-auto">
    <!-- Loading State -->
    <div id="loadingState" class="text-center py-12">
      <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-orange-500 mx-auto"></div>
      <p class="mt-4 text-gray-600">Cargando noticia...</p>
    </div>

    <!-- Error State -->
    <div id="errorState" class="text-center py-12 hidden">
      <div class="text-red-500 mb-4">
        <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.268 15.5c-.77.833.192 2.5 1.732 2.5z" />
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Noticia no encontrada</h1>
      <p class="text-gray-600 mb-6">La noticia que buscas no existe o ha sido eliminada.</p>
      <a href="/noticias" class="inline-block px-6 py-3 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition-colors">
        Ver todas las noticias
      </a>
    </div>

    <!-- News Content -->
    <article id="newsContent" class="hidden">
      <!-- Breadcrumb -->
      <nav class="mb-6">
        <ol class="flex items-center space-x-2 text-sm text-gray-500">
          <li><a href="/" class="hover:text-orange-600 transition-colors">Inicio</a></li>
          <li class="flex items-center">
            <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <a href="/noticias" class="hover:text-orange-600 transition-colors">Noticias</a>
          </li>
          <li class="flex items-center">
            <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-gray-900" id="breadcrumbTitle">...</span>
          </li>
        </ol>
      </nav>

      <!-- Article Header -->
      <header class="mb-8">
        <h1 id="newsTitle" class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 leading-tight">
          <!-- Title will be loaded here -->
        </h1>
        
        <div class="flex items-center space-x-4 text-sm text-gray-500 mb-6">
          <time id="newsDate" class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <!-- Date will be loaded here -->
          </time>
          <div id="featuredBadge" class="hidden">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
              Destacado
            </span>
          </div>
        </div>

        <p id="newsDescription" class="text-xl text-gray-600 leading-relaxed">
          <!-- Description will be loaded here -->
        </p>
      </header>

      <!-- Featured Image -->
      <div id="newsImageContainer" class="mb-8 hidden">
        <img 
          id="newsImage" 
          alt="" 
          class="w-full rounded-lg shadow-lg"
        />
      </div>

      <!-- Article Content -->
      <div class="prose prose-lg max-w-none">
        <div id="newsContentBody" class="text-gray-700 leading-relaxed">
          <!-- Content will be loaded here -->
        </div>
      </div>

      <!-- Share Section -->
      <div class="mt-12 pt-8 border-t border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Compartir esta noticia</h3>
        <div class="flex space-x-4">
          <button id="shareWhatsApp" class="flex items-center px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
            </svg>
            WhatsApp
          </button>
          
          <button id="shareTwitter" class="flex items-center px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
            Twitter
          </button>
          
          <button id="shareFacebook" class="flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            Facebook
          </button>
          
          <button id="copyLink" class="flex items-center px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
            Copiar enlace
          </button>
        </div>
      </div>

      <!-- Back to News -->
      <div class="mt-12 pt-8 border-t border-gray-200">
        <a href="/noticias" class="inline-flex items-center text-orange-600 hover:text-orange-800 font-medium transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Volver a todas las noticias
        </a>
      </div>
    </article>

    <!-- Related News -->
    <section id="relatedNews" class="mt-16 hidden">
      <h2 class="text-2xl font-bold mb-6" style="color: #ff7b00;">Noticias Relacionadas</h2>
      <div id="relatedContainer" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Related news will be loaded here -->
      </div>
    </section>
  </div>
</Layout>

<script>
  import apiService from '../../services/api.js';

  class NewsDetailPage {
    constructor() {
      this.slug = null;
      this.newsData = null;
      this.init();
    }

    init() {
      this.slug = this.getSlugFromURL();
      if (this.slug) {
        this.loadNews();
        this.bindShareEvents();
      } else {
        this.showError();
      }
    }

    getSlugFromURL() {
      const path = window.location.pathname;
      const parts = path.split('/');
      return parts[parts.length - 1];
    }

    showLoading() {
      document.getElementById('loadingState')?.classList.remove('hidden');
      document.getElementById('errorState')?.classList.add('hidden');
      document.getElementById('newsContent')?.classList.add('hidden');
    }

    hideLoading() {
      document.getElementById('loadingState')?.classList.add('hidden');
      document.getElementById('newsContent')?.classList.remove('hidden');
    }

    showError() {
      document.getElementById('errorState')?.classList.remove('hidden');
      document.getElementById('loadingState')?.classList.add('hidden');
      document.getElementById('newsContent')?.classList.add('hidden');
    }

    async loadNews() {
      this.showLoading();

      try {
        const response = await apiService.getNewsDetail(this.slug);
        
        if (response.success && response.data) {
          this.newsData = response.data;
          this.renderNews(response.data);
          this.loadRelatedNews();
          this.hideLoading();
        } else {
          this.showError();
        }
      } catch (error) {
        console.error('Error loading news:', error);
        this.showError();
      }
    }

    renderNews(news) {
      // Update page title
      document.title = `${news.titulo} - Asociación Sanjuanina de Nutrición`;

      // Update breadcrumb
      const breadcrumbTitle = document.getElementById('breadcrumbTitle');
      if (breadcrumbTitle) {
        breadcrumbTitle.textContent = news.titulo.length > 50 ? 
          news.titulo.substring(0, 50) + '...' : 
          news.titulo;
      }

      // Update article content
      document.getElementById('newsTitle').textContent = news.titulo;
      document.getElementById('newsDescription').textContent = news.descripcion_corta;
      
      // Format and display date
      const dateElement = document.getElementById('newsDate');
      if (dateElement) {
        const date = new Date(news.fecha_publicacion);
        dateElement.innerHTML = `
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          ${date.toLocaleDateString('es-ES', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        `;
      }

      // Show featured badge if applicable
      if (news.destacado) {
        document.getElementById('featuredBadge')?.classList.remove('hidden');
      }

      // Display image if exists
      if (news.imagen) {
        const imageContainer = document.getElementById('newsImageContainer');
        const image = document.getElementById('newsImage');
        if (imageContainer && image) {
          image.src = `http://localhost:8080/${news.imagen}`;
          image.alt = news.titulo;
          imageContainer.classList.remove('hidden');
        }
      }

      // Render content (preserving HTML formatting)
      const contentBody = document.getElementById('newsContentBody');
      if (contentBody) {
        // Simple HTML rendering (you might want to use a proper HTML sanitizer in production)
        contentBody.innerHTML = news.contenido.replace(/\n/g, '<br>');
      }
    }

    async loadRelatedNews() {
      try {
        const response = await apiService.getRecentNews(4);
        if (response.success && response.data.length > 0) {
          // Filter out current news
          const related = response.data.filter(item => item.slug !== this.slug).slice(0, 3);
          if (related.length > 0) {
            this.renderRelatedNews(related);
            document.getElementById('relatedNews')?.classList.remove('hidden');
          }
        }
      } catch (error) {
        console.error('Error loading related news:', error);
      }
    }

    renderRelatedNews(news) {
      const container = document.getElementById('relatedContainer');
      if (!container) return;

      container.innerHTML = news.map(item => this.createRelatedNewsCard(item)).join('');
    }

    createRelatedNewsCard(news) {
      const imageUrl = news.imagen ? 
        `http://localhost:8080/${news.imagen}` : 
        'https://via.placeholder.com/400x200?text=Sin+Imagen';

      return `
        <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-all duration-300">
          <div class="aspect-w-16 aspect-h-9 bg-gray-200">
            <img 
              src="${imageUrl}" 
              alt="${news.titulo}"
              class="w-full h-32 object-cover"
              onerror="this.src='https://via.placeholder.com/400x200?text=Sin+Imagen'"
            />
          </div>
          <div class="p-4">
            <h3 class="text-sm font-semibold mb-2 text-gray-900 line-clamp-2">${news.titulo}</h3>
            <p class="text-gray-600 text-xs mb-3 line-clamp-2">${news.descripcion_corta}</p>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-500">
                ${new Date(news.fecha_publicacion).toLocaleDateString('es-ES')}
              </span>
              <a 
                href="/noticia/${news.slug}" 
                class="text-orange-600 hover:text-orange-800 font-medium text-xs transition-colors"
              >
                Leer más →
              </a>
            </div>
          </div>
        </article>
      `;
    }

    bindShareEvents() {
      // WhatsApp share
      document.getElementById('shareWhatsApp')?.addEventListener('click', () => {
        if (this.newsData) {
          const url = window.location.href;
          const text = `${this.newsData.titulo} - ${this.newsData.descripcion_corta}`;
          window.open(`https://wa.me/?text=${encodeURIComponent(text + ' ' + url)}`, '_blank');
        }
      });

      // Twitter share
      document.getElementById('shareTwitter')?.addEventListener('click', () => {
        if (this.newsData) {
          const url = window.location.href;
          const text = this.newsData.titulo;
          window.open(`https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}&url=${encodeURIComponent(url)}`, '_blank');
        }
      });

      // Facebook share
      document.getElementById('shareFacebook')?.addEventListener('click', () => {
        if (this.newsData) {
          const url = window.location.href;
          window.open(`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`, '_blank');
        }
      });

      // Copy link
      document.getElementById('copyLink')?.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText(window.location.href);
          
          // Show feedback
          const button = document.getElementById('copyLink');
          const originalText = button.innerHTML;
          button.innerHTML = `
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            ¡Copiado!
          `;
          button.classList.remove('bg-gray-600', 'hover:bg-gray-700');
          button.classList.add('bg-green-600', 'hover:bg-green-700');
          
          setTimeout(() => {
            button.innerHTML = originalText;
            button.classList.remove('bg-green-600', 'hover:bg-green-700');
            button.classList.add('bg-gray-600', 'hover:bg-gray-700');
          }, 2000);
        } catch (error) {
          console.error('Error copying to clipboard:', error);
        }
      });
    }
  }

  // Initialize when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new NewsDetailPage();
  });
</script>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .aspect-w-16 {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
  }

  .aspect-w-16 img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .prose {
    max-width: none;
  }

  .prose p {
    margin-bottom: 1rem;
  }

  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .prose ul, .prose ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .prose blockquote {
    border-left: 4px solid #ff7b00;
    padding-left: 1rem;
    margin: 1rem 0;
    font-style: italic;
    color: #6b7280;
  }
</style>